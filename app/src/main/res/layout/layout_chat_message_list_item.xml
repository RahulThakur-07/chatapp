<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_marginTop="12dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_message_box"
        android:orientation="vertical"
        android:background="@drawable/outgoing_message_bg">

        <TextView
            android:id="@+id/chat_message_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="chat_message_username"
            android:paddingLeft="24dp"
            android:paddingTop="12dp"
            android:paddingRight="24dp"/>

        <TextView
            android:id="@+id/chat_message_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/Black"
            android:textSize="16sp"
            tools:text="chat_message_message"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingBottom="12dp"/>
    </LinearLayout>
