<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item
        android:state_pressed="true">
        <shape>
            <corners android:radius="999dp"/>
            <solid
                android:color="#F34050B6"/>
            <stroke
                android:color="#E4F9FAFA"
                android:width="1dp"/>
        </shape>
    </item>


    <item>
        <shape>
            <corners android:radius="999dp"/>
            <solid
                android:color="@color/colorPrimary"/>
            <stroke
                android:color="#E4E5E6E6"
                android:width="1dp"/>
        </shape>
    </item>

</selector>